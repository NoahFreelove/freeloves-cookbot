@inject CookBot.Application.Services.PantryService PantryService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Create Shared Pantry</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_pantryName" Label="Pantry Name" Variant="Variant.Outlined"
                      Placeholder="e.g. Family Kitchen" Class="mb-2" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Create"
                   Disabled="@string.IsNullOrWhiteSpace(_pantryName)">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public int OwnerUserId { get; set; }

    private string _pantryName = "";

    private async Task Create()
    {
        if (string.IsNullOrWhiteSpace(_pantryName)) return;

        var pantry = await PantryService.CreateSharedPantryAsync(OwnerUserId, _pantryName.Trim());
        Snackbar.Add($"Shared pantry \"{pantry.Name}\" created!", Severity.Success);
        MudDialog.Close(DialogResult.Ok(pantry));
    }

    private void Cancel() => MudDialog.Cancel();
}
